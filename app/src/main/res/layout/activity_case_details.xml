<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewCaseId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Case ID: "
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewCaseShortDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Description: " />
    <TextView
        android:id="@+id/textViewCaseFullDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Description: " />

    <TextView
        android:id="@+id/textViewCaseStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Status: " />

    <TextView
        android:id="@+id/textViewTrackingLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16sp"
        android:clickable="true"
        android:focusable="true"/>

    <!-- Call Icon -->
    <Button
        android:id="@+id/callButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/baseline_call_24"
        android:text="Driver Phone: +1234567890" />

    <Button
        android:id="@+id/doctorCallButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/baseline_call_24"
        android:text="Doctor Phone: +9876543210" />




</LinearLayout>
